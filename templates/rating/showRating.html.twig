{% extends 'base.html.twig' %}


{% block title %}Rating panel{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/lib/jqeury-datatables.css') }}">
    <link rel="stylesheet" href="{{ asset('css/control.css') }}">
{% endblock %}

{% block body %}
    <div class="container mx-auto my-auto">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark position-sticky">
            <a class="navbar-brand col-lg-1" href="#"><h1>Quizzz</h1></a>
            <div class="collapse navbar-collapse pl-5">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link " href="{{ path('app_home') }}"><h2 class="text-white">Home</h2></a>
                    </li>
                </ul>
                <div class="nav-item dropdown active my-2 my-lg-0 col-lg-4">
                    {% if is_granted('ROLE_USER') %}
                        <a class="nav-link text-white" href="{{ path('app_logout') }}"><h2>Log out</h2></a>
                    {% else %}
                        <a class="nav-link text-white"
                           href="#" id="navbarDropdown"
                           role="button" data-toggle="dropdown"
                           aria-haspopup="true"
                           aria-expanded="false"
                        >
                            <h2>Authorization</h2>
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="{{ path('app_login') }}">Already signed? Log in</a>
                            <a class="dropdown-item" href="{{ path('app_register') }}">New around here? Sign up</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="{{ path('app_reset_password', {'token': 'x'}) }}">Forgot password?</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </nav>
        <div class="col-lg-1"></div>
        <h4 class="text-white"
            style="text-align: center;">Rating</h4>
            <table id="included_questions" class="table table-bordered table-sm" cellspacing="0" style="width: 100%;">
                <tr class="text-white col-lg-6 text-left" style="background-color: #343a40; height: 5%; width: 100%">
                    <th class="th-sm">Position
                    </th>
                    <th class="th-sm">Name
                    </th>
                    <th class="th-sm">Score
                    </th>
                    <th class="th-sm">Time
                    </th>
                </tr>
                <tr>
                    <td>1</td>
                    <td>Tiger Nixon</td>
                    <td>100%</td>
                    <td>00:05:48</td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Ashton Cox</td>
                    <td>100%</td>
                    <td>00:06:03</td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>Cedric Kelly</td>
                    <td>80%</td>
                    <td>00:05:01</td>
                </tr>
                <tr style="background-color: lightgrey">
                    <td>23</td>
                    <td>Brielle Williamson</td>
                    <td>35%</td>
                    <td>00:08:54</td>
                </tr>
            </table>
            <div class="mt-1 mb-2 d-flex" style="background-color: #343a40; height: 5%; width: 100%">
                <div class="col-lg-1"></div>
                <span class="text-white col-lg-6 text-left" style="font-size: 20px">Try playing other quizzes</span>
                <div class="col-lg-1"></div>
                <input
                    type="button" id="btn3"
                    value="OK"
                    class="btn btn-primary col-lg-1 text-center"
                    style="height: 100%;">
            </div>

        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/lib/jqeury-datatables.js') }}"></script>
    <script src="{{ asset('js/control.js') }}"></script>
{% endblock %}