{% extends 'base.html.twig' %}

{% block title %}Quizzz{% endblock %}

{% block body %}
    <div class="container mx-auto my-auto">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark position-sticky">
            <a class="navbar-brand col-lg-1" href="#"><h1>Quizzz</h1></a>
            <div class="collapse navbar-collapse pl-5">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link " href="{{ path('app_home') }}"><h2 class="text-white">Home</h2></a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item active ">
                        <a class="nav-link" href="{{ path('app_users') }}"><h2 class="text-white">Users</h2></a>
                    </li>
                    <li class="nav-item active ">
                        <a class="nav-link" href="{{ path('app_quiz_new') }}"><h2 class="text-white">New quiz</h2></a>
                    </li>
                    {% endif %}
                </ul>
                <div class="nav-item dropdown active my-2 my-lg-0 col-lg-4">
                    {% if is_granted('ROLE_USER') %}
                        <a class="nav-link text-white" href="{{ path('app_logout') }}"><h2>Log out</h2></a>
                    {% else %}
                    <a class="nav-link text-white" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><h2>Authorization</h2>
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="{{ path('app_login') }}">Already signed? Sign in</a>
                        <a class="dropdown-item" href="{{ path('app_register') }}">New around here? Sign up</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="{{ path('app_forgot_password_request', {'token': 'x'}) }}">Forgot password?</a>
                    </div>
                    {% endif %}
                </div>
            </div>
        </nav>
        <div class="mx-auto text-center" style="width: 100%; height: 100%; background: whitesmoke;">
            <img src="{{ asset('img/quiz-page-logo.png') }}" alt="quiz" class="card-img-top">
            <div style="background-color: #343a40; height: 5%; width: 100%"></div>
        </div>
    </div>
{% endblock %}